apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: root-app
  namespace: {{ argocd_namespace }}
spec:
  project: default
  source:
    repoURL: "{{ github_repo_url }}"
    targetRevision: "{{ github_repo_branch }}"
    path: "{{ argocd_managed_git_path }}"
    directory:
      recurse: true
  destination:
    server: https://kubernetes.default.svc
    namespace: "{{ argocd_namespace }}"
  syncPolicy:
    automated:
      prune: true
      selfHeal: true