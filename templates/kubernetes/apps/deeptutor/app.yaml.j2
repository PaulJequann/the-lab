---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: deeptutor
  namespace: {{argocd_namespace | default('argocd')}}
spec:
  destination:
    namespace: {{deeptutor_namespace}}
    server: https://kubernetes.default.svc
    finalizers:
      - resources-finalizer.argocd.argoproj.io
  project: apps
  source:
    chart: {{helmchart_template_name}}
    repoURL: {{helmchart_template_repo}}
    targetRevision: {{helmchart_template_version}}
    helm:
      releaseName: deeptutor
      valuesObject:
        controllers:
          deeptutor:
            pod:
              securityContext:
                fsGroup: 1000
                runAsUser: 1000
                runAsGroup: 1000
            containers:
              app:
                image:
                  repository: {{deeptutor_image_repository}}
                  tag: {{deeptutor_image_tag}}
                  pullPolicy: Always

                env:
                  - name: TZ
                    value: America/New_York
                  # LLM Configuration
                  - name: LLM_BINDING
                    value: "{{ deeptutor_llm_binding }}"
                  - name: LLM_MODEL
                    value: "{{ deeptutor_llm_model }}"
                  - name: LLM_BINDING_HOST
                    value: "{{ deeptutor_llm_host }}"
                  - name: DISABLE_SSL_VERIFY
                    value: "{{ deeptutor_disable_ssl_verify }}"

                  # Embedding Configuration
                  - name: EMBEDDING_BINDING
                    value: "{{ deeptutor_embedding_binding }}"
                  - name: EMBEDDING_MODEL
                    value: "{{ deeptutor_embedding_model }}"
                  - name: EMBEDDING_BINDING_HOST
                    value: "{{ deeptutor_embedding_host }}"
                  - name: EMBEDDING_DIM
                    value: "{{ deeptutor_embedding_dim }}"
                  - name: EMBEDDING_MAX_TOKENS
                    value: "{{ deeptutor_embedding_max_tokens }}"

                  # Service Ports
                  - name: BACKEND_PORT
                    value: "{{ deeptutor_backend_port }}"
                  - name: FRONTEND_PORT
                    value: "{{ deeptutor_frontend_port }}"

                  # Logging
                  - name: RAG_TOOL_MODULE_LOG_LEVEL
                    value: "{{ deeptutor_rag_log_level }}"

                  # API Keys from Sealed Secret
                  - name: LLM_BINDING_API_KEY
                    valueFrom:
                      secretKeyRef:
                        name: deeptutor-secrets
                        key: LLM_BINDING_API_KEY
                  - name: EMBEDDING_BINDING_API_KEY
                    valueFrom:
                      secretKeyRef:
                        name: deeptutor-secrets
                        key: EMBEDDING_BINDING_API_KEY
                  - name: PERPLEXITY_API_KEY
                    valueFrom:
                      secretKeyRef:
                        name: deeptutor-secrets
                        key: PERPLEXITY_API_KEY
                ports:
                  - name: http
                    containerPort: {{deeptutor_frontend_port}}
                  - name: backend
                    containerPort: {{deeptutor_backend_port}}
            service:
              app:
                controller: deeptutor
                ports:
                  http:
                    port: {{deeptutor_frontend_port}}
                  backend:
                    port: {{deeptutor_backend_port}}
            ingress:
              app:
                enabled: true
                className: cilium
                annotations:
                  cert-manager.io/cluster-issuer: {{cert_manager_issuer_name}}
                hosts:
                  - host: {{deeptutor_domain}}
                    paths:
                      - path: /
                        pathType: Prefix
                        service:
                          identifier: app
                          port: http
                tls:
                  - secretName: deeptutor-tls
                    hosts:
                      - {{deeptutor_domain}}
              persistence:
                data:
                  enabled: true
                  type: persistentVolumeClaim
                  storageClass: nfs-csi
                  accessMode: ReadWriteOnce
                  size: {{deeptutor_storage_size}}
                  globalMounts:
                    - path: /app/data
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 5
      backoff:
        duration: "5s"
        factor: 2
        maxDuration: "3m"
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
