---
apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: infrastructure
  namespace: {{ argocd_namespace | default('argocd') }}
spec:
  description: Infrastructure services (e.g., storage)
  sourceRepos:
    - {{ github_repo_url }}
    - {{ argocd_chart_repo }}
    - {{ cert_manager_chart_repo }}
    - {{ sealed_secrets_chart_repo }}
    - {{ cilium_repo_url }}
    - {{ csi_driver_nfs_chart_repo }}
  destinations:
    - namespace: '*'
      server: 'https://kubernetes.default.svc'
  clusterResourceWhitelist:
    - group: ''
      kind: Namespace
    - group: storage.k8s.io
      kind: StorageClass
    - group: storage.k8s.io
      kind: CSIDriver
    - group: gateway.networking.k8s.io
      kind: GatewayClass
    - group: apiextensions.k8s.io
      kind: CustomResourceDefinition
    - group: rbac.authorization.k8s.io
      kind: ClusterRole
    - group: rbac.authorization.k8s.io
      kind: ClusterRoleBinding
  namespaceResourceWhitelist:
    - group: '*'
      kind: '*'
