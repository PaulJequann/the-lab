---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: radarr
  namespace: {{argocd_namespace | default('argocd')}}
spec:
  destination:
    namespace: {{media_namespace}}
    server: https://kubernetes.default.svc
    finalizers:
      - resources-finalizer.argocd.argoproj.io
  project: apps
  source:
    chart: {{helmchart_template_name}}
    repoURL: {{helmchart_template_repo}}
    targetRevision: {{helmchart_template_version}}
    helm:
      releaseName: radarr
      values: |
        controllers:
          radarr:
            pod:
              securityContext:
                fsGroup: 1000
                runAsUser: 1000
                runAsGroup: 1000
            containers:
              app:
                image:
                  repository: {{ radarr_image_repository }}
                  tag: {{ radarr_image_tag }}
                env:
                  TZ: America/New_York
        service:
          app:
            controller: radarr
            ports:
              http:
                port: 7878
        ingress:
          app:
            enabled: true
            className: cilium
            annotations:
              cert-manager.io/cluster-issuer: {{ cert_manager_issuer_name }}
            hosts:
              - host: {{ radarr_domain }}
                paths:
                  - path: /
                    pathType: Prefix
                    service:
                      identifier: app
                      port: http
            tls:
              - secretName: radarr-tls
                hosts:
                  - {{ radarr_domain }}
        persistence:
          config:
            enabled: true
            type: persistentVolumeClaim
            storageClass: nfs-csi
            accessMode: ReadWriteOnce
            size: 2Gi
            globalMounts:
              - path: /config
          media:
            enabled: true
            type: nfs
            server: {{ nfs_server }}
            path: {{ nfs_media_export_path }}
            globalMounts:
              - path: /media
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    retry:
      limit: 5
      backoff:
        duration: "5s"
        factor: 2
        maxDuration: "3m"
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
