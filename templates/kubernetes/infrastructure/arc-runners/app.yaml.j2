---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: gha-runner-scale-set
  namespace: argocd
  annotations:
    argocd.argoproj.io/sync-wave: "-2"
spec:
  project: infrastructure
  source:
    repoURL: ghcr.io/actions/actions-runner-controller-charts
    chart: gha-runner-scale-set
    targetRevision: {{arc_runner_chart_version}}
    helm:
      releaseName: arc-runner-set
      valuesObject:
        controllerServiceAccount:
          name: gha-rs-controller
          namespace: arc-system
        githubConfigUrl: "{{ arc_github_config_url }}"
        githubConfigSecret: arc-github-token

        minRunners: {{arc_min_runners}}
        maxRunners: {{arc_max_runners}}

        # Runner configuration
        runnerScaleSetName: "the-lab-runners"

        # Docker-in-Docker for building images
        containerMode:
          type: ""

        # Resource limits for runners
        template:
          spec:
            securityContext:
              fsGroup: 1001
            initContainers:
              - name: init-dind-externals
                image: ghcr.io/actions/actions-runner:latest
                volumeMounts:
                  - name: dind-externals
                    mountPath: /home/runner/externals
            containers:
              - name: runner
                image: "ghcr.io/actions/actions-runner:latest"
                command: ["/home/runner/run.sh"]
                env:
                  - name: DOCKER_HOST
                    value: unix:///var/run/docker.sock
                resources:
                  limits: {cpu: "4", memory: "8Gi"}
                  requests: {cpu: "2", memory: "4Gi"}
                volumeMounts:
                  - name: work
                    mountPath: /home/runner/_work
                  - name: dind-sock # MOUNT THE SOCKET
                    mountPath: /var/run
              - name: dind
                image: docker:dind
                securityContext: {privileged: true}
                command:
                  - dockerd-entrypoint.sh
                  - --group
                  - "1001"
                resources:
                  limits: {cpu: "2", memory: "4Gi"}
                  requests: {cpu: "1", memory: "2Gi"}
                volumeMounts:
                  - name: work
                    mountPath: /home/runner/_work
                  - name: dind-sock # MOUNT THE SOCKET
                    mountPath: /var/run
                  - name: docker-cache
                    mountPath: /var/lib/docker
            volumes:
              - name: work
                emptyDir: {}
              - name: dind-sock # DEFINE THE SOCKET VOLUME
                emptyDir: {}
              - name: dind-externals # SHARED BINARIES
                emptyDir: {}
              - name: docker-cache
                persistentVolumeClaim:
                  claimName: arc-docker-cache

  destination:
    server: https://kubernetes.default.svc
    namespace: {{arc_runner_namespace}}

  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
