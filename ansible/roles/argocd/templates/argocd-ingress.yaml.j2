---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: argocd-server-ingress
  namespace: argocd
spec:
  ingressClassName: cilium
  rules:
    - host: {{ argocd_domain }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: argocd-server
                port:
                  number: 80
    # Uncomment the following section to enable TLS for ArgoCD
    #tls:
      #- hosts:
          #- {{ argocd_domain }}
        #secretName: argocd-server-tls