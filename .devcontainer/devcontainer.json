// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
  "name": "The Lab - Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/python",
  "remoteUser": "vscode",
  "updateRemoteUserUID": false,
  "features": {
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/dhoeric/features/stern:1": {},
    "ghcr.io/rio/features/kustomize:1": {},
    "ghcr.io/devcontainers-community/npm-features/prettier:1": {},
    "ghcr.io/larsnieuwenhuizen/features/jqyq:0": {},
    "ghcr.io/devcontainers-extra/features/age:1": {},
    "ghcr.io/devcontainers-extra/features/ansible:2": {},
    "ghcr.io/devcontainers-extra/features/go-task:1": {},
    "ghcr.io/devcontainers-extra/features/kubectl-asdf:2": {},
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/devcontainers-extra/features/sops:1": {},
    "ghcr.io/devcontainers-extra/features/yamllint:2": {},
    "ghcr.io/devcontainers-extra/features/argo-cd:1": {}
  },
  "mounts": [
    // SOPS age keys for secret decryption
    "source=${localEnv:HOME}/.config/sops/age/keys.txt,target=/home/vscode/.config/sops/age/keys.txt,type=bind,consistency=cached,readonly",
    // SSH keys for git and ansible
    "source=${localEnv:HOME}/.ssh/,target=/home/vscode/.ssh/,type=bind,consistency=cached,readonly",
    // Terraform Cloud credentials
    "source=${localEnv:HOME}/.terraform.d/credentials.tfrc.json,target=/home/vscode/.terraform.d/credentials.tfrc.json,type=bind,consistency=cached,readonly",
    // Kubernetes config
    "source=${localEnv:HOME}/.kube,target=/home/vscode/.kube,type=bind,consistency=cached",
    // Claude Code config persistence
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    // OpenCode config persistence
    "source=${localEnv:HOME}/.opencode,target=/home/vscode/.opencode,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "SOPS_AGE_KEY_FILE": "/home/vscode/.config/sops/age/keys.txt",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
  },
  "postCreateCommand": "bash ./.devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "Anthropic.claude-code",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "ms-python.python",
        "hashicorp.terraform",
        "redhat.ansible",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "yaml.schemas": {
          "kubernetes": "kubernetes/**/*.yaml"
        }
      }
    }
  }
}
