// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
  "name": "Ubuntu",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/dhoeric/features/stern:1": {},
    "ghcr.io/rio/features/kustomize:1": {},
    // "ghcr.io/jsburckhardt/devcontainer-features/flux:1": {},
    "ghcr.io/devcontainers-community/npm-features/prettier:1": {},
    // "ghcr.io/nucleuscloud/devcontainer-features/helmfile:0": {},
    "ghcr.io/larsnieuwenhuizen/features/jqyq:0": {},
    "ghcr.io/devcontainers-extra/features/age:1": {},
    "ghcr.io/devcontainers-extra/features/ansible:2": {},
    "ghcr.io/devcontainers-extra/features/go-task:1": {},
    "ghcr.io/devcontainers-extra/features/kubectl-asdf:2": {},
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/devcontainers-extra/features/sops:1": {},
    "ghcr.io/devcontainers-extra/features/yamllint:2": {}
  },
  "mounts": [
    "source=${localEnv:HOME}/.config/sops/age/keys.txt,target=/home/vscode/.config/sops/age/keys.txt,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.ssh/id_ed25519.pub,target=/home/vscode/.ssh/id_ed25519.pub,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.terraform.d/credentials.tfrc.json,target=/home/vscode/.terraform.d/credentials.tfrc.json,type=bind,consistency=cached,readonly"
  ],

  "remoteEnv": {
    "SOPS_AGE_KEY_FILE": "/home/vscode/.config/sops/age/keys.txt"
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "mkdir -p ~/.config/sops/age && sudo chown -R $USER:$USER /usr/local/py-utils/venvs/ansible-core && pipx inject ansible-core passlib && pipx install makejinja && pipx inject makejinja attrs"
  // "postCreateCommand": "mkdir -p ~/.config/sops/age && chmod 600 ~/.config/sops/age/keys.txt && chown -R $USER:$USER /usr/local/py-utils/venvs/ansible-core && pipx inject ansible-core passlib"
  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
